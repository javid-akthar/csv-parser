            $('#' + tdId).data('order', "desc")
            myArray = myArray.sort((a, b) => {
                console.log('a[column]', a[column])
                console.log('typeof(a[column])', typeof (a[column]));
                return a[column] < b[column] ? 1 : -1
            })
            text += '&#9650'

        }
        $('#' + tdId).html(text)
        buildTable(myArray)
    }

